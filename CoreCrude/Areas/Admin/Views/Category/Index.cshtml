@using Crudeoperation.Models
 @model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-4">
    <div class="row p-3">
        <div class="col-6 ">
            <h2 class="text-primary" >List Of Categories</h2>
        </div>
        <div class="col-6 text-end">
            <a class=" text-primary"  asp-action="Create" asp-controller="Category"> <i class="bi bi-plus-circle-fill"></i>&nbsp; Create New Category</a>
        </div>
    </div>
</div>


 <table class="table table-bordered table-striped " style="width:100%">
    <thead>
        <tr>
            <th>Category Name</th>
            <th>DisplayOrder</th>
            <th>Options</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.DisplayOrder</td>
                <td role="group">
                    <a asp-action="Edit" class="border btn-primary" asp-controller="Category" asp-route-Id=@item.Id><i class="bi bi-pencil-square"></i></a>
                     <a asp-action="Delete" class="border btn-danger" asp-controller="Category" asp-route-Id=@item.Id><i class="bi bi-trash"></i></a>

                </td>
            </tr>
            
        }
    </tbody>
</table>

